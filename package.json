{
  "name": "duckweed-todo-demo",
  "version": "0.0.0",
  "description": "Duckweed demo todo list app",
  "main": "index.js",
  "author": "Hajime Yamasaki Vukelic",
  "license": "MIT",
  "dependencies": {
    "duckweed": "^0.6.0",
    "es6-object-assign": "^1.1.0",
    "es6-promise": "^4.1.1",
    "query-string": "^5.0.0",
    "snabbdom": "^0.7.0",
    "whatwg-fetch": "^2.0.3"
  },
  "devDependencies": {
    "@types/autoprefixer": "^6.7.3",
    "@types/extract-text-webpack-plugin": "^2.1.0",
    "@types/html-webpack-plugin": "^2.28.0",
    "@types/jest": "^20.0.4",
    "@types/query-string": "^5.0.0",
    "@types/webpack": "^3.0.9",
    "@types/webpack-bundle-analyzer": "^2.9.0",
    "@types/webpack-env": "^1.13.0",
    "autoprefixer": "^7.1.3",
    "cross-env": "^5.0.5",
    "css-loader": "^0.28.5",
    "duckweed-devtool": "^0.1.0",
    "extract-text-webpack-plugin": "^3.0.0",
    "file-loader": "^0.11.2",
    "html-webpack-plugin": "^2.30.1",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^20.0.4",
    "postcss-loader": "^2.0.6",
    "style-loader": "^0.18.2",
    "stylus": "^0.54.5",
    "stylus-loader": "^3.0.1",
    "ts-jest": "^20.0.10",
    "ts-loader": "^2.3.3",
    "ts-node": "^3.3.0",
    "tslint": "^5.6.0",
    "tslint-loader": "^3.5.3",
    "typescript": "^2.4.2",
    "url-loader": "^0.5.9",
    "webpack": "^3.5.5",
    "webpack-bundle-analyzer": "^2.9.0",
    "webpack-dev-server": "^2.7.1"
  },
  "jest": {
    "moduleDirectories": [
      "src",
      "node_modules"
    ],
    "testRegex": "\\.test\\.tsx?$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ],
    "moduleNameMapper": {
      "\\.styl$": "identity-obj-proxy"
    },
    "transform": {
      "\\.(ts|tsx)$": "<rootDir>/node_modules/ts-jest/preprocessor.js"
    },
    "mapCoverage": true
  },
  "scripts": {
    "start": "webpack-dev-server --config webpack.config.ts",
    "build": "cross-env NODE_ENV=production webpack --config webpack.config.ts",
    "build:profile": "cross-env NODE_ENV=production webpack --config webpack.config.ts --env.profile=yes",
    "build:demo": "npm run build -- --env.prefix /duckweed-tasks",
    "test": "jest",
    "test:watch": "jest --watch"
  }
}
