{
  "compilerOptions": {
    /* Basic Options */
    "target": "es5",
    "module": "commonjs",
    "lib": ["es2015", "es2016", "esnext.asynciterable", "dom"],
    "jsx": "react",
    "jsxFactory": "html",

    // Make iterators compatible
    "downlevelIteration": true,

    /* Strict Type-Checking Options */
    "strict": true,
    "alwaysStrict": true,

    /* Additional Checks */
    "noUnusedLocals": true,
    "noFallthroughCasesInSwitch": true,

    /* Module Resolution Options */
    "baseUrl": "./src",
    "allowSyntheticDefaultImports": true,
    "typeRoots": [
      "./typings",
      "node_modules/@types"
    ]
  }
}
